@using ITReviewer.Libraries.Models;
@model List<Company>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-dark bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Компанії</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class= "row pb-3">
			<div class="col-6"></div>
		<div class="col-6 text-end">
			<a asp-controller="Company" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-patch-plus"></i> Додати Компанію
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Назва Компанії
			</th>
			<th>
				Дата появи на сайті
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
				@foreach (var a in Model.OrderBy(u => u.RegDate.ToString().Substring(0, 10)))
				{
				<tr>
					<td>
							@a.Name
					</td>
					<td>
							@a.RegDate.ToString().Substring(0, 10)
					</td>
					<td class="d-flex justify-content-center">
						<div class="w-100 btn-group" role="group">
							<a asp-controller="Company" asp-action="Edit" asp-route-id="@a.Id" class="btn btn-secondary mx-2"><i class="bi bi-pencil"></i> Редагувати</a>
							<a asp-controller="Company" asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Видалити</a>
						</div>
					</td>
				</tr>	
				}

	</tbody>

</table>
	</div>
</div>

